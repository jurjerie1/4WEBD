@model _4WEBD.NotificationService.Razor.Template.Views.Emails.ConfirmTicketTemplateModel
@{
    Layout = "Layout//LayoutEmail.cshtml";
}
<tr>
    <td align="center" style="padding: 20px 0;">
        <h1 style="margin: 0; font-size: 22px;">Confirmation de votre réservation</h1>
    </td>
</tr>

<tr>
    <td style="padding: 0 40px;">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td style="padding: 20px 0;">
                    <p style="margin: 0;">Bonjour @Model.UserName,</p>
                    <p style="margin: 10px 0;">
                        Pour valider valider la demande de reservation de @Model.NumberOfPlaces place(s) pour l'événement @Model.EventName le @Model.EventDate, veuillez cliquer sur le bouton ci-dessous.
                    </p>
                </td>
            </tr>
            <tr>
                <td align="center" style="padding: 20px 0;">
                    <a href="@Model.Url" style="display: inline-block; padding: 15px 30px; background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593); color: white; text-decoration: none; border-radius: 4px; font-weight: bold;">Je confirme la reservation</a>
                </td>
            </tr>
        </table>
    </td>
</tr>

